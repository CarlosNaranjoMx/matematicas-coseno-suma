{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Compile LaTeX to PDF",
            "type": "shell",
            "request": "launch",
            "command": "pdflatex",
            "args": [
                "-interaction=nonstopmode",
                "-file-line-error",
                "general.tex"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": {
                "owner": "latex",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):\\s+(.*)",
                    "file": 1,
                    "line": 2,
                    "message": 3
                }
            }
        },
        {
            "name": "Compile LaTeX (Full Build)",
            "type": "shell",
            "request": "launch",
            "command": "pdflatex",
            "args": [
                "-interaction=nonstopmode",
                "-file-line-error",
                "general.tex"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "dependsOrder": "sequence",
            "dependsOn": [
                {
                    "type": "shell",
                    "command": "pdflatex",
                    "args": [
                        "-interaction=nonstopmode",
                        "general.tex"
                    ]
                }
            ]
        }
    ]
}
